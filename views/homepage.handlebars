 <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->
                {{#each posts as |post|}}
                <div class="post-preview">
                    <a href="post.html">
                        <a href="/post/{{post.id}}"><h2 class="post-title" id={{post.id}}>{{post.title}}</h2></a>
                        <h3 class="post-subtitle">{{post.content}}</h3>
                    </a>
                    <div class="post-meta">
                        Posted by
                        <p>{{post.user.name}}</p>
                        <p>{{post.createdAt}}</p>
                    </div>
                </div>
                {{/each}}
                <!-- Divider-->
                <hr class="my-4" />
            
